/**index.wxss**/

page {
  background: #8ed145;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 10rpx 0;
}
.indexContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width: 300rpx;
  height: 300rpx;
  border-radius: 150rpx;
}
.userName{
  font-size: 32rpx;
  /* 400是原始的字体粗度 */
  font-weight: 700; 
}
.goStudy{
  margin: 100rpx 0;
  font-size: 28rpx;
  border: 3rpx solid red;
  width: 200rpx;
  height: 80rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;
}
.tanChuBtn{
    margin: 100rpx 0;
    font-size: 34rpx;
    border: 3rpx solid green;
    width: 200rpx;
    border-radius: 20rpx;
    text-align: center;
    line-height: 80rpx;
}
.userInfoBtn{
    margin: 100rpx 0;
    font-size: 28rpx;
    border: 3rpx solid rgb(60, 24, 221);
    width: 200rpx;
    border-radius: 20rpx;
    height: 80rpx;
    text-align: center;
    background-color: white;
}